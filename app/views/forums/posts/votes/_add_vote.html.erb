<%# locals: (forum_post:, show: true) -%>

<li class="forum-post-vote-block" style="<%= "display: none" unless show %>">
  <%= link_to(tag.i(class: "fa-regular fa-thumbs-up"), "#", "title": "Vote up", "class": "forum-vote-up", 'data-forum-id': forum_post.id) %>

  <%= link_to(tag.i(class: "fa-regular fa-face-meh"), "#", "title": "Vote meh", "class": "forum-vote-meh", 'data-forum-id': forum_post.id) %>

  <%= link_to(tag.i(class: "fa-regular fa-thumbs-down"), "#", "title": "Vote down", "class": "forum-vote-down", 'data-forum-id': forum_post.id) %>
</li>
