<%= form_search(path: forum_posts_path) do |f| %>
  <%= f.input(:topic_title_matches, label: "Title") %>
  <%= f.input(:body_matches, label: "Body") %>
  <%= f.user(:creator, label: "Creator") %>
  <%= f.input(:linked_to, label: "Tag", hint: "Find posts mentioning a tag", input_html: { "data-autocomplete": "tag" }) %>
  <%= f.input(:not_linked_to, label: "Tag", input_html: { "data-autocomplete": "tag" }, hide_unless_value: true) %>
  <%= f.input(:topic_category_id, label: "Category", collection: ForumCategory.visible(CurrentUser.user).reverse_mapping, include_blank: true) %>
  <%= f.input(:order, collection: [["Last updated", "updated_at_desc"], %w[Newest id_desc], %w[Oldest id_asc], ["Highest Rating", "rating_asc"], ["Lowest Rating", "rating_desc"], ["Highest Score", "score_asc"], ["Lowest score", "score_desc"]]) %>
<% end %>
