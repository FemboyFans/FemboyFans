<%= custom_form_for(@forum_category) do |f| %>
  <%= f.input(:name, as: :string) %>
  <%= f.input(:can_view, collection: user_levels_for_select(User::Levels::ANONYMOUS), include_blank: false) %>
  <%= f.input(:can_create, collection: user_levels_for_select(User::Levels::ANONYMOUS), include_blank: false) %>
  <%= f.input(:description, as: :dtext, limit: Config.instance.forum_category_description_max_size, allow_color: false) %>
  <%= f.button(:submit, "Submit", name: nil) %>
<% end %>
