<%= form_search(path: forum_topics_path, hide_on_load: true) do |f| %>
  <%= f.input(:title_matches, label: "Title") %>
  <%= f.user(:creator) %>
  <%= f.input(:is_sticky, label: "Sticky?", collection: [%w[Yes true], %w[No false]], include_blank: true) %>
  <%= f.input(:is_locked, label: "Locked?", collection: [%w[Yes true], %w[No false]], include_blank: true) %>
  <%= f.input(:is_hidden, label: "Hidden?", collection: [%w[Yes true], %w[No false]], include_blank: true) %>
  <%= f.input(:category_id, label: "Category", collection: ForumCategory.visible(CurrentUser.user).reverse_mapping, include_blank: true) %>
  <%= f.input(:order, collection: [%w[Sticky sticky], %w[Created created_at], %w[Activity last_post_created_at]]) %>
<% end %>

