<p>"<%= @forum_topic.title %>" was updated:</p>

<% @forum_posts.each do |forum_post| %>
  <p>
    <strong><%= forum_post.creator_name %> said:</strong>
  </p>
  <%= format_text(forum_post.body, base_url: root_url, max_thumbs: 0) %>
  <br>
  <hr>
  <br>
<% end %>

<p><%= link_to("View topic", forum_topic_url(@forum_topic, page: @forum_topic.last_page, host: FemboyFans.config.hostname, only_path: false)) %> | <%= link_to("Unsubscribe", users_email_notification_url(user_id: @user.id, sig: email_sig(@user, :unsubscribe), host: FemboyFans.config.hostname, only_path: false)) %></p>
