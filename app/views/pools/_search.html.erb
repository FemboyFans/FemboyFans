<%= form_search(path: request.path) do |f| %>
  <%= f.input(:name_matches, label: "Name", autocomplete: "pool") %>
  <%= f.input(:description_matches, label: "Description") %>
  <%= f.input(:any_artist_name_matches, label: "Artist Name", autocomplete: "artist") %>
  <%= f.user(:creator) %>
  <%= f.input(:is_ongoing, label: "Ongoing", collection: [%w[Yes true], %w[No false]], include_blank: true) %>
  <%= f.input(:category, label: "Category", collection: [%w[Series series], %w[Collection collection]], include_blank: true) %>
  <%= f.input(:order, label: "Order", collection: [["Last updated", "updated_at"], ["Name", "name"], ["Recently created", "created_at"], ["Post count", "post_count"]], include_blank: true) %>
<% end %>
