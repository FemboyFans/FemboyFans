<%= custom_form_for(tag_alias) do |f| %>
  <%= f.input(:antecedent_name, label: "From", autocomplete: "tag") %>
  <%= f.input(:consequent_name, label: "To", autocomplete: "tag") %>
  <% if tag_alias.new_record? %>
    <%= f.input(:reason, as: :dtext, limit: Config.instance.forum_post_max_size) %>
  <% end %>

  <% if tag_alias.new_record? %>
    <%= f.input(:forum_topic_id, as: :string, hint: " (optional)") %>
  <% end %>

  <% if tag_alias.new_record? && can_use_attribute?(tag_alias, :skip_forum) %>
    <%= f.input(:skip_forum, as: :boolean, label: "Skip forum topic creation") %>
  <% end %>
  <%= f.button(:submit, "Submit") %>
<% end %>
