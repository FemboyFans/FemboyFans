<%# locals: (tag:) -%>
<% if tag&.antecedent_alias %>
  <p class="hint">
    This tag has been aliased to <%= link_to_wiki_or_new(tag.antecedent_alias.consequent_name) %>
    (<%= link_to("learn more", help_page_path(id: "tag_aliases")) %>).
  </p>
<% end %>
<% if tag&.consequent_aliases&.present? %>
  <p class="hint">
    The following tags are aliased to this tag: <%= multiple_link_to_wiki_or_new(tag.consequent_aliases.pluck(:antecedent_name).sort) %>
    (<%= link_to("learn more", help_page_path(id: "tag_aliases")) %>).
  </p>
<% end %>
<% if tag&.antecedent_implications&.present? %>
  <p class="hint">
    This tag implicates <%= multiple_link_to_wiki_or_new(tag.antecedent_implications.pluck(:consequent_name).sort) %>
    (<%= link_to("learn more", help_page_path(id: "tag_implications")) %>).
  </p>
<% end %>
<% if tag&.consequent_implications&.present? %>
  <p class="hint">
    The following tags implicate this tag: <%= multiple_link_to_wiki_or_new(tag.consequent_implications.pluck(:antecedent_name).sort) %>
    (<%= link_to("learn more", help_page_path(id: "tag_implications")) %>).
  </p>
<% end %>
