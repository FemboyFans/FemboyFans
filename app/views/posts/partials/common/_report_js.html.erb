<%# locals: (sig:, url:) %>

<% if Reports.enabled? %>
  <%= javascript_tag(nonce: true) do -%>
    $(function() {
      $.ajax({
        url: "<%= FemboyFans.config.reports.server %><%= url %>",
        type: "POST",
        headers: {
          "Authorization": "Bearer <%= Reports.jwt_signature(url) %>",
          "Content-Type": "application/json"
        },
        data: JSON.stringify({
          msg: "<%= sig %>"
        })
      });
    });
  <% end -%>
<% end %>
