<%= table_for(@blocks) do |t| %>
  <% t.column("User") do |block| %>
    <%= link_to_user(block.target) %>
  <% end %>
  <% t.column("Hide Comments") do |block| %>
    <%= block.hide_comments ? "Yes" : "No" %>
  <% end %>
  <% t.column("Hide Forum Topics") do |block| %>
    <%= block.hide_forum_topics ? "Yes" : "No" %>
  <% end %>
  <% t.column("Hide Forum Posts") do |block| %>
    <%= block.hide_forum_posts ? "Yes" : "No" %>
  <% end %>
  <% t.column("Disable Messages") do |block| %>
    <%= block.disable_messages ? "Yes" : "No" %>
  <% end %>
  <% t.column do |block| %>
    <% if CurrentUser.user == @user %>
      <%= link_to("Edit", edit_user_block_path(@user, block)) %> |
      <%= link_to("Remove", user_block_path(@user, block), method: :delete) %>
    <% end %>
  <% end %>
<% end %>

<%= numbered_paginator(@blocks) %>

<%= render("secondary_links") %>
<% content_for(:page_title) do %>
  Blocked Users List
<% end %>
